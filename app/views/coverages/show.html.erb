<%- model_class = Coverage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @coverage.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:liability) %>:</strong></dt>
  <dd><%= @coverage.liability %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deductible) %>:</strong></dt>
  <dd><%= @coverage.deductible %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              coverages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_coverage_path(@coverage), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              coverage_path(@coverage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= form_for @coverage, :html => { :class => "form-horizontal coverage" } do |f| %>

    <% if @coverage.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@coverage.errors.count, "error") %> prohibited this coverage from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @coverage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@coverage[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :liability, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :liability, :class => 'form-control' %>
    </div>
    <%= error_span(@coverage[:liability]) %>
  </div>
  <div class="control-group">
    <%= f.label :deductible, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :deductible, :class => 'form-control' %>
    </div>
    <%= error_span(@coverage[:deductible]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            coverages_path, :class => 'btn btn-default' %>

<% end %>

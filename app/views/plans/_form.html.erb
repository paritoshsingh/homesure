<%= form_for @plan, :html => { :class => "form-horizontal plan" } do |f| %>

    <% if @plan.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @plan.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@plan[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :shortdesc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shortdesc, :class => 'form-control' %>
    </div>
    <%= error_span(@plan[:shortdesc]) %>
  </div>
  <div class="control-group">
    <%= f.label :longdesc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longdesc, :class => 'form-control' %>
    </div>
    <%= error_span(@plan[:longdesc]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            plans_path, :class => 'btn btn-default' %>

<% end %>
